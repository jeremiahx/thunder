<% if errors.errors.any? %>
  <% errors.errors.each do |error|%>
          <!-- This example requires Tailwind CSS v2.0+ -->
        <div class="rounded-md bg-red-50 p-4 m-4 border border-rose-500">
          <div class="flex">
            <div class="flex-shrink-0">
              <!-- Heroicon name: outline/fire -->
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">Error on <%= error.attribute %> field</h3>
              <div class="text-xs text-gray-500">
                <p><%= error.full_message %></p>

              </div>
            </div>
          </div>
        </div>
  <%end%>
<%end%>